{
  "version": 2,
  "builds": [
    {
      "src": "projects/*/dist/*",
      "use": "@vercel/multi-copy-files",
      "outputs": [
        { "dir": "dist", "glob": "projects/*/dist/*" },
        { "dir": ".", "glob": ["projects/*/package.json", "projects/*/tsconfig.json"] }
      ]
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/projects/core/dist/index.html"
    }
  ],
  "rewrites": [
    {
      "source": "/api",
      "destination": "/api"
    }
  ],
  "environment": {
    "API_URL": "https://tawangmenezes.vercel.app/api",
    "REMOTE_URLS": {
      "partner": "https://tawangmenezes.vercel.app/partner/remoteEntry.js",
      "externalCompanies": "https://tawangmenezes.vercel.app/externalCompanies/remoteEntry.js",
      "listPartner": "https://tawangmenezes.vercel.app/listPartner/remoteEntry.js",
      "listExternalCompanies": "https://tawangmenezes.vercel.app/listExternalCompanies/remoteEntry.js",
      "about": "https://tawangmenezes.vercel.app/about/remoteEntry.js"
    }
  }

}

